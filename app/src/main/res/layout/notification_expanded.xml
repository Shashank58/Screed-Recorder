<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:id="@+id/launcher_icon"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@mipmap/ic_launcher"
        android:layout_margin="16dp"
        />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:layout_toEndOf="@id/launcher_icon"
        android:layout_marginTop="16dp"
        android:textSize="16sp"
        android:textColor="#212121"
        />

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pause_or_stop_recording_through_the_given_controls"
        android:layout_below="@id/title"
        android:layout_toEndOf="@id/launcher_icon"
        android:textColor="@color/grey_500"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="4dp"
        />

    <TextView
        android:id="@+id/notification_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey_500"
        android:layout_below="@id/description"
        android:layout_marginTop="16dp"
        android:layout_toEndOf="@id/launcher_icon"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/notification_divider"
        android:layout_toEndOf="@id/launcher_icon"
        >

        <RelativeLayout
            android:id="@+id/pause_play"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            >

            <TextView
                android:id="@+id/pause_play_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/pause"
                android:textSize="18sp"
                android:textColor="@color/grey_500"
                />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_toStartOf="@id/pause_play_text"
                android:src="@drawable/ic_pause"
                android:tint="@color/grey_500"
                />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/stop"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            >

            <TextView
                android:id="@+id/stop_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/stop"
                android:textSize="18sp"
                android:textColor="@color/grey_500"
                />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_toStartOf="@id/stop_text"
                android:src="@drawable/ic_stop"
                android:tint="@color/grey_500"
                />

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>